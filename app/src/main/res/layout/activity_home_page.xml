<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context="com.example.st.genesys.HomePage">

    <Button
        android:id="@+id/home_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/home"
        android:text="Home"
        android:textColor="@android:color/background_dark" />

    <Button
        android:id="@+id/gooda_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/home_btn"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        android:background="@drawable/goodicon"
        android:text="GOODS"
        android:textColor="@android:color/background_dark" />

    <Button
        android:id="@+id/service_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/home_btn"
        android:layout_centerVertical="true"
        android:background="@drawable/services"
        android:text="SERVICES"
        android:textColor="@android:color/background_dark" />

    <Button
        android:id="@+id/account_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/gooda_btn"
        android:layout_marginBottom="124dp"
        android:background="@drawable/myaccountnor"
        android:text="My Account"
        android:textColor="@android:color/background_dark" />

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/service_btn"
        android:layout_alignTop="@+id/account_btn"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/logout222"
        android:text="LOG OUT"
        android:textColor="@android:color/background_dark" />

    <Button
        android:id="@+id/product_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="43dp"
        android:background="@drawable/producticon"
        android:text="PRODUCTION"
        android:textColor="@android:color/background_dark" />


</RelativeLayout>
