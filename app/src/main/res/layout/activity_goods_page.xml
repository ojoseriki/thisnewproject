<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.st.genesys.goodsPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                style="@style/titleStyle"
                android:text="Calculator" />


            <EditText
                android:id="@+id/quntity_good"
                style="@style/inputStyle.Text"
                android:ems="10"
                android:hint="Quantity"
                android:inputType="textPersonName"/>


            <EditText
                android:id="@+id/price_good"
                style="@style/inputStyle.Text"
                android:ems="10"
                android:hint="Total Price"
                android:inputType="textPersonName|numberDecimal"/>

            <EditText
                android:id="@+id/time_goods"
                style="@style/inputStyle.Text"
                android:ems="10"
                android:hint="No idea"
                android:inputType="number"/>

            <EditText
                android:id="@+id/date_good"
                style="@style/inputStyle.Text"
                android:ems="10"
                android:hint="Date"
                android:inputType="date"/>

            <Button
                android:id="@+id/submit_goods"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@color/colorPrimaryDark"
                android:text="Submit"
                android:textColor="@color/colorWhite"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
