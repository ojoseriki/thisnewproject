<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context="com.example.st.genesys.employeeSignup">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center_horizontal"
             android:orientation="vertical">

             <TextView
                 style="@style/titleStyle"
                 android:text="Let's get started..." />


             <EditText
                 android:id="@+id/employfname"
                 style="@style/inputStyle.Text"
                 android:hint="Your First Name"/>

             <EditText
                 android:id="@+id/employlname"
                 style="@style/inputStyle.Text"
                 android:hint="Your Last Name"/>


             <EditText
                 android:id="@+id/employaddres"
                 style="@style/inputStyle.Text"
                 android:hint="Your Address Name"/>


             <EditText
                 android:id="@+id/employjobdescription"
                 style="@style/inputStyle.Text"
                 android:hint="Job Description"/>

             <EditText
                 android:id="@+id/employpass"
                 style="@style/inputStyle.Text"
                 android:hint="Password"/>



             <Spinner
                 android:id="@+id/employcode"
                 android:layout_width="@dimen/inputWidth"
                 android:layout_height="@dimen/inputHeight"
                 android:layout_marginTop="20dp"
                 android:background="@drawable/background_spinner"
                 android:entries="@array/companies"/>

             <Button
                 android:id="@+id/employsignup_btn"
                 android:layout_width="100dp"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="25dp"
                 android:background="@drawable/background_btn"
                 android:text="Sign Up"
                 android:textColor="@color/colorWhite" />
         </LinearLayout>
    </ScrollView>

</LinearLayout>
