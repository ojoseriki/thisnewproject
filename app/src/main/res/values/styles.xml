<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="titleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textSize">@dimen/titleTextSize</item>
        <item name="android:textColor">@color/colorDarkGrey</item>
    </style>

    <style name="inputStyle">
        <item name="android:layout_width">@dimen/inputWidth</item>
        <item name="android:layout_height">@dimen/inputHeight</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="inputStyle.Text" parent="inputStyle">
        <item name="android:background">@drawable/background_textview</item>
    </style>

    <style name="spinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="background">@drawable/background_spinner</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

</resources>
